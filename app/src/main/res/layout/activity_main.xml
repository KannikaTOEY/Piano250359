<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ice_pbru.kongsud.kannika.piano.MainActivity"
    android:background="@drawable/bg019">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/textView"
            android:textSize="70dp"
            android:gravity="center"
            android:background="#56ffffff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:text="Do"
                android:id="@+id/button"
                android:textSize="40dp"
                android:background="#9fd0d7" />

            <Button
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:text="RE"
                android:id="@+id/button2"
                android:textSize="40dp"
                android:background="#3d88c9" />

            <Button
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:text="MI"
                android:id="@+id/button3"
                android:textSize="@dimen/size1"
                android:background="#61bce3" />

            <Button
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:text="FA"
                android:id="@+id/button4"
                android:textSize="@dimen/size1"
                android:background="#6b98d8" />

            <Button
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:text="SOL"
                android:id="@+id/button5"
                android:textSize="@dimen/size1"
                android:background="#3c73d8" />

            <Button
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:text="LA"
                android:id="@+id/button6"
                android:textSize="@dimen/size1"
                android:background="#396fc1" />

            <Button
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:text="SI"
                android:id="@+id/button7"
                android:textSize="@dimen/size1"
                android:background="#4779e4" />

            <Button
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:text="DO"
                android:id="@+id/button8"
                android:textSize="@dimen/size1"
                android:background="#f31676c9" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
